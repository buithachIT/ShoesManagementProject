@{
    ViewData["Title"] = "Home";
}

<section class="carousel ms-5 me-5">
    <div id="carouselExampleControls" class="carousel slide w-100" data-bs-ride="carousel">
        <div class="carousel-inner w-100">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Url.Content("~/image/slide1.png")" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content("~/image/slide2.png")" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<div class="w-100 d-flex justify-content-center">
    <div class="line"></div>
</div>
<section class="shop-by-gender">
    <div class="container">
        <h3>Shop By Gender</h3>
        <div class="option-by-gender d-flex w-100 justify-content-between">
            <div class="option-by-gender-men">
                <div class="option-by-gender-img"><img src="@Url.Content("~/image/men.png")" width="400" alt=""></div>
                <a href=""><div class="option-by-gender-label">
                    <p>Sneakers</p>
                </div></a>
            </div>
            <div class="option-by-gender-girl d-flex flex-column justify-content-between">
                <div class="option-by-gender-img"><img src="@Url.Content("~/image/giay_nu.jpg")" width="400" alt=""></div>
                <a href=""><div class="option-by-gender-label">
                    <p>Giày Da</p>
                </div></a>
            </div>
            <div class="option-by-gender-kid d-flex flex-column justify-content-between">
                <div class="option-by-gender-img"><img src="@Url.Content("~/image/giay_kid.png")" width="400" alt=""></div>
                <a href=""><div class="option-by-gender-label">
                    <p>Giày trẻ em</p>
                </div></a>
            </div>
        </div>
    </div>
</section>
<div class="w-100 mt-3 d-flex justify-content-center">
    <div class="line"></div>
</div>
@* SECTION NEW Arrival *@
<section class="section-new-product">
    <div class="container">
        <h3>New Arrival</h3>
        <div class="option-by-new d-flex w-100 justify-content-between" id="new-products">
        @foreach (var product in Model)
            {
                <a href="#"><div class="product-by-new">
                    <div class="product-by-new-img">
                        <img src="@Url.Content("~/image/image_product/"+@product.ImageUrl)" width="400" alt="@product.NameProduct">

                    </div>
                    <div class="option-by-new-label">
                        <p class="fw-bold">@product.NameProduct</p>
                        
                        <p>@product.Price<sup class="ms-1">đ</sup></p>
                    </div>
                </div></a>
                }
    </div>
    </div>
    </section>